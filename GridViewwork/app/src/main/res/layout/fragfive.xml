<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    >
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/title1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true">
                <Button
                    android:id="@+id/backbutton"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="@drawable/shape"
                    android:text="Back"
                    android:layout_margin="5dp"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无线模式"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:textColor="#9E9E9E"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView"
                    android:layout_alignParentTop="true" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview"
                android:text="设置接入WIFI名称:"
                android:layout_marginBottom="3dp"
                android:textSize="18dp"
                android:textColor="@color/actionBarColorDark"
                android:layout_below="@+id/listview_fragfour"
                android:layout_marginStart="50dp" />

            <Button
                android:id="@+id/edittext1button"
                android:layout_width="wrap_content"
                android:enabled="true"
                android:text="发送命令"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/edittext1"
                android:layout_alignTop="@+id/edittext1"
                android:layout_above="@+id/textview3" />

            <Button
                android:id="@+id/edittext3button"
                android:layout_width="wrap_content"
                android:enabled="true"
                android:text="发送命令"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:background="@drawable/shape"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/edittext3"
                android:layout_below="@id/edittext3"
                android:layout_alignTop="@+id/edittext3"
                android:layout_alignBottom="@+id/edittext3" />



            <EditText
                android:id="@+id/edittext1"
                android:focusable="true"
                android:digits="@string/alphabet_and_number"
                android:inputType="number"
                android:layout_width="150dp"
                android:enabled="true"
                android:textSize="20dp"
                android:textColor="@color/actionBarColorDark"
                android:background="@drawable/shape_three"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview"
                android:layout_alignStart="@+id/textview" />
            <EditText
                android:id="@+id/edittext2"
                android:focusable="true"
                android:digits="@string/alphabet_and_number"
                android:inputType="number"
                android:layout_width="150dp"
                android:enabled="true"
                android:textSize="20dp"
                android:textColor="@color/actionBarColorDark"
                android:background="@drawable/shape_three"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview"
                android:layout_alignStart="@+id/textview" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview3"
                android:text="设置接入WIFI密码:"
                android:textSize="18dp"
                android:textColor="@color/actionBarColorDark"
                android:layout_below="@+id/edittext2"
                android:layout_alignStart="@+id/edittext1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview2"
                android:text="设置服务器ip和端口号:"
                android:textSize="18dp"
                android:textColor="@color/actionBarColorDark"
                android:layout_below="@+id/edittext3"
                android:layout_alignStart="@+id/edittext1" />
            <EditText
                android:layout_width="150dp"
                android:id="@+id/edittext4"
                android:textSize="20dp"
                android:textColor="@color/actionBarColorDark"
                android:digits="@string/alphabet_and_number"
                android:inputType="number"
                android:background="@drawable/shape_three"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview2"
                android:layout_alignStart="@+id/textview2" />
            <Button
                android:id="@+id/edittext2button"
                android:layout_width="wrap_content"
                android:enabled="true"
                android:text="发送命令"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:background="@drawable/shape"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/edittext4"
                android:layout_alignBottom="@+id/edittext4"
                android:layout_below="@+id/textview2" />
            <ListView
                android:layout_width="match_parent"
                android:id="@+id/listview_fragfour"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:transcriptMode="alwaysScroll"
                android:background="@drawable/shape_two"
                android:layout_height="200dp"
                android:layout_below="@+id/title1" />
            <Button
                android:layout_below="@id/edittext4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="next"
                android:layout_margin="5dp"
                android:background="@drawable/shape"
                android:layout_alignParentEnd="true"
                android:id="@+id/nextbutton" />

            <EditText
                android:layout_width="150dp"
                android:id="@+id/edittext3"
                android:textSize="20dp"
                android:textColor="@color/actionBarColorDark"
                android:digits="@string/alphabet_and_number"
                android:inputType="number"
                android:background="@drawable/shape_three"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview3"
                android:layout_alignEnd="@+id/textview3" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>