<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_home_blood_oxygen"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimens15"
    android:layout_marginRight="@dimen/dimens15"
    android:layout_marginTop="@dimen/dimens10"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dimens15"
    android:paddingTop="@dimen/dimens15">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/dimens15"
        android:src="@drawable/icon_home_breath" />

    <RelativeLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_weight="1.0">

        <TextView
            android:id="@+id/home_blood_oxygen_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/home_blood_oxygen_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/home_blood_oxygen_value"
            android:text="@string/home_breathing" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_blood_oxygen_time"
            android:layout_marginTop="5.0dip"
            android:visibility="gone">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/blood_oxygen_progress" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/position_presress" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/comm_pregress_height"
            android:layout_below="@id/home_blood_oxygen_time"
            android:layout_marginTop="8.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/no_blood_pressure" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dimens15"
        android:scaleType="centerInside"
        android:src="@drawable/icon_home_more" />
</LinearLayout>