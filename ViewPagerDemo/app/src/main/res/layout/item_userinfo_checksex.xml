<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60.0dip"
    android:layout_centerVertical="true"
    android:background="@color/white"
    android:paddingLeft="@dimen/dimens15"
    android:paddingRight="@dimen/dimens15">

    <TextView
        style="@style/Style.Text.Tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="@string/userinfo_sex" />

    <TextView
        android:id="@+id/item_sex_man"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_sex_woman"
        android:drawableLeft="@drawable/man_selected"
        android:drawablePadding="@dimen/dimens5"
        android:gravity="center_vertical"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:text="@string/userinfo_sex_man" />

    <TextView
        android:id="@+id/item_sex_woman"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20.0dip"
        android:drawableLeft="@drawable/women_unselected"
        android:drawablePadding="@dimen/dimens5"
        android:gravity="center_vertical"
        android:paddingLeft="20.0dip"
        android:text="@string/userinfo_sex_woman" />
</RelativeLayout>