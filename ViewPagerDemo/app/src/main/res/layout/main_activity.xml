<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <dyk.viewpagerdemo.view.TitleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </dyk.viewpagerdemo.view.TitleLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="270.dip"
        android:layout_gravity="start"
        android:layout_height="match_parent"
        android:background="@color/common_white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160.0dip"
            android:orientation="vertical"
            android:background="@mipmap/sliding_bg">
            <ImageView
                android:id="@+id/sliding_imageview_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20.0dip"
                android:src="@mipmap/sliding_logo"/>
            <View
                android:id="@+id/view"
                android:layout_below="@id/sliding_imageview_logo"
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:layout_marginTop="20.0dip"
                android:background="@color/common_white"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:layout_below="@id/view"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_connect_state"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/textSize12"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_white"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:text="未连接"/>
                <TextView android:textSize="@dimen/textSize12"
                    android:textColor="@color/white"
                    android:text="--%"
                    android:id="@+id/tv_battery_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
                <ProgressBar
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tv_battery_percent"
                    android:layout_width="30.0dip"
                    android:layout_height="15.0dip"
                    android:layout_marginRight="5.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:indeterminate="false"
                    android:indeterminateOnly="false"
                    android:progressDrawable="@drawable/progressbar_horizontal1"
                    android:background="@mipmap/sliding_battery"/>
            </RelativeLayout>
        </LinearLayout>
    <ListView
        android:id="@+id/sliding_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />
        <TextView
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_disconnect_band"
            android:background="@drawable/bg_check_version_selector"
            android:paddingLeft="40.0dip" android:paddingTop="10.0dip"
            android:paddingRight="40.0dip"
            android:paddingBottom="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_marginBottom="30.0dip"
            android:text="@string/disconnect_band"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>