<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:ignore="MissingPrefix">

    <zhj.viewgroupdemo.TimeLineMarker
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        app:beginLine="@color/dim_foreground_material_dark"
        app:endLine="@color/dim_foreground_material_dark"
        app:lineSize="2dp"
        app:marker="@mipmap/name"
        app:markerSize="24dp" />

    <RelativeLayout
        android:layout_toRightOf="@id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="4dp"

            android:paddingRight="4dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/txtTime_comman"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingBottom="12dp"
            android:paddingTop="4dp"
            android:paddingRight="4dp"
            android:text="次/分"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:id="@+id/txtTime_value"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@id/txtTime_comman"
            android:paddingBottom="14dp"
            android:paddingTop="2dp"
            android:text="86"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />


    </RelativeLayout>



</RelativeLayout>