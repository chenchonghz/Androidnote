<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通知栏管理" />

    <TextView
        android:id="@+id/noti_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/noti_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/noti_sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/noti_small_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="#88cccc" />

    <ImageView
        android:id="@+id/noti_large_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="#88cccc" />

    <FrameLayout
        android:id="@+id/noti_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#88333333"
        android:minHeight="54dp" />

    <FrameLayout
        android:id="@+id/noti_bit_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#88333333"
        android:minHeight="54dp" />

</LinearLayout>
